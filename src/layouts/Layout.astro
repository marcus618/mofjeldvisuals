---
import '../styles/global.css';
import 'photoswipe/style.css';

interface Props {
    title: string;
}

const { title } = Astro.props;
const imageUrl = new URL('/signature-white.png', Astro.url);

---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="A curated photography portfolio by Mofjeld Visuals." />
        <meta name="viewport" content="width=device-width" />

        <meta property="og:title" content={title} />
        <meta property="og:description" content="A curated photography portfolio by Mofjeld Visuals." />
        <meta property="og:image" content={imageUrl} />
        <meta property="og:type" content="website" />

        <link rel="icon" type="image/png" href="/signature-white.png" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
        <title>{title}</title>

        <script type="application/ld+json" set:html={JSON.stringify({
            "@context": "https://schema.org",
            "@type": "Organization",
            "name": "Mofjeld Visuals",
            "url": Astro.site,
            "logo": new URL('/images/signature-white.png', Astro.site),
            "description": "A curated photography portfolio by Mofjeld Visuals."
            })} />
    </head>
    <body class="bg-gradient-to-br from-slate-900 to-zinc-900 text-gray-200 font-['Inter']">
        <header class="p-8">
            <nav class="container mx-auto flex justify-center items-center">
                <a href="/">
                    <img 
                        src="/signature-white.png" 
                        alt="Mofjeld Visuals Signature Logo" 
                        class="h-30 w-auto" 
                    />
                </a>
            </nav>
        </header>
        <main>
            <slot /> 
        </main>
        <footer class="text-center p-8 text-gray-500">
            <p>Â© {new Date().getFullYear()} Mofjeld Visuals. All rights reserved.</p>
        </footer>
    </body>
</html>